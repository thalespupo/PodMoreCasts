<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_episode_title"
        android:layout_width="@dimen/episode_title_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/episode_title_margin"
        android:gravity="start"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_view_download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Episode title" />

    <ImageView
        android:id="@+id/image_view_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/download_icon_margin"
        android:layout_marginEnd="@dimen/download_icon_margin"
        android:layout_marginTop="@dimen/download_icon_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_file_download_black"
        android:visibility="invisible"
        android:contentDescription="@string/description_download_icon"/>

</android.support.constraint.ConstraintLayout>